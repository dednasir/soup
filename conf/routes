# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /index.html                                       Application.index

# Home page
GET     /                                       Application.index

GET     /soups.html                                       Application.soups

GET     /blog.html                                       Application.blog

GET     /faq.html                                       Application.faq

GET     /about.html                                       Application.about

# Creating a soup
GET     /BaseSoup/{id}                          Application.CreateBaseSoup(id)

GET     /soups.html/{id}                    Application.AddBaseIngredient(id)

GET     /soups.html/PacketSize.html/{id}                          Application.AddPacketSize(id)

GET     /soups.html/RemovePacketSize.html/{id}                    Application.RemovePacketSize(id)

GET     /soups.html/RemoveIngredient.html/{id}                  Application.RemoveIngredient(id)

GET     /soups.html/RemoveSoup.html/{id}                        Application.RemoveSoup(id)

GET 	/shoppingCart							Application.showshoppingcart

GET 	/removeShopSoup/{id}				    Application.shopRemoveSoup(id)

GET 	/removeShopIng/{id}/{ingid}				Application.shopRemoveIng(id,ingid)
# login
GET     /login.php                              Application.login

# logout
GET     /logout.php                             Application.logout

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
