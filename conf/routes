# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Creating a soup
GET     /BaseSoup/{id}                          Application.CreateBaseSoup(id)

GET     /SoupIngredient/{id}                    Application.AddBaseIngredient(id)

GET     /SoupSize/{id}                          Application.AddPacketSize(id)

GET     /RemoveIngredient/{id}                  Application.RemoveIngredient(id)

GET     /RemoveSoup/{id}                        Application.RemoveSoup(id)

#GET 	/shoppingCart							Application.showshoppingcart
# login
GET     /login.php                              Application.login

# logout
GET     /logout.php                             Application.logout

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
